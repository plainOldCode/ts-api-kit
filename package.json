{
  "name": "fastify-typescript-starter",
  "version": "1.0.0",
  "description": "A TypeScript starter template for Fastify with TypeORM",
  "main": "index.js",
  "scripts": {
    "test": "jest ./build/*.spec.js ./build/api/v0/*.spec.js",
    "prebuild": "npm-run-all clean lint",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf ./build",
    "dev": "nodemon build/index.js",
    "start": "node build/index.js",
    "lint": "eslint .",
    "ci:test": "NODE_ENV=test npm-run-all build migrate:init-test migrate:run-test test",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migrate:run": "NODE_ENV=local typeorm --dataSource ./build/data-source/index.js migration:run",
    "migrate:run-local": "npm-run-all migrate:run",
    "migrate:run-test": "NODE_ENV=test typeorm --dataSource ./build/data-source/index.js migration:run",
    "migrate:init-test": "mysql -h 127.0.0.1 -u root --password=root -e 'CREATE DATABASE IF NOT EXISTS test_db;'"
  },
  "_moduleAliases": {
    "@api": "build/api",
    "@entity": "build/entity",
    "@data-source": "build/data-source/index.js",
    "@server": "build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/fastify-typescript-starter.git"
  },
  "keywords": [
    "fastify",
    "typescript",
    "typeorm",
    "mysql",
    "starter",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/fastify-typescript-starter/issues"
  },
  "homepage": "https://github.com/your-username/fastify-typescript-starter#readme",
  "dependencies": {
    "fastify": "^3.29.0",
    "fastify-plugin": "^3.0.1",
    "@fastify/cors": "^7.0.0",
    "@fastify/swagger": "^6.0.1",
    "mysql2": "^2.3.3",
    "nodemon": "^2.0.16",
    "pino": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "module-alias": "^2.2.2",
    "typeorm": "0.3.6"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.34",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  }
}